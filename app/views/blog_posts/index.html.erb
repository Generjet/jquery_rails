<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>

<%= form_with url: blog_posts_path, method: :get, local: true do |form| %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @blog_posts %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog Post', new_blog_post_path %>
