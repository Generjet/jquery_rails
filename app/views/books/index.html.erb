<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= render 'remote_form', book: Book.new %>
<%= render 'modal_form' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.description %></td>
        <td><%= book.published_at %> <%= link_to 'Publish', publish_book_path(book), method: :patch, remote: true %></td>
        <td><%= link_to 'Show', book, :class => "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, :class => "btn btn-primary", data: { bs_toggle: 'modal', bs_target: "#bookModal", remote: true } %>
